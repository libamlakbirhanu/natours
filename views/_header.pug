header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      //- a.nav__elMy(href="#")  bookings
      a.nav__el(href="/_me") 
        img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
        span= user.name.split(' ')[0]
      a.nav__el.nav__el--logout(type='button') Sign out
    else
      a.nav__el(href='/login', type='button') Log in
      a.nav__el.nav__el--cta(href='/signup', type='button') Sign up